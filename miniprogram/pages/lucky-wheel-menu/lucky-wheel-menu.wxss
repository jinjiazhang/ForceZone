/* pages/lucky-wheel-menu/lucky-wheel-menu.wxss */
page {
  background-color: #F8F9FA;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.presets-header {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.presets-tabs {
  flex: 1;
  height: 90rpx;
  width: 0; /* needed for flex child scroll-view to work properly */
}

.tabs-inner {
  display: flex;
  align-items: center;
  height: 100%;
}

.tab-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 16rpx 36rpx;
  background: #F0F2F5;
  border-radius: 40rpx;
  margin-right: 20rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.tab-item.active {
  background: #EBF5FF;
  border-color: #4A90E2;
}

.tab-title {
  font-size: 28rpx;
  color: #555;
  font-weight: 500;
}

.tab-item.active .tab-title {
  color: #4A90E2;
  font-weight: bold;
}

.delete-preset-hitbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  margin-right: -20rpx;
  opacity: 0.6;
}

.delete-preset-hitbox:active {
  opacity: 1;
}

.delete-preset-icon {
  font-size: 32rpx;
  color: #999;
  line-height: 1;
}

.add-preset-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #4A90E2;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.add-preset-btn text {
  font-size: 40rpx;
  line-height: normal;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-preset-btn:active {
  transform: scale(0.95);
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 30rpx 32rpx;
  overflow: hidden;
}

.section-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.preset-name-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.preset-title-input {
  margin-top: 16rpx;
  font-size: 32rpx;
  color: #333;
  background: #F8F9FA;
  padding: 24rpx 20rpx;
  border-radius: 12rpx;
  min-height: 80rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.options-section {
  flex: 1;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.options-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: 1rpx solid #F0F2F5;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

.options-scroll {
  flex: 1;
  height: 0; /* Important for flex child scroll-view */
}

.option-list {
  padding: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  min-height: 110rpx;
  box-sizing: border-box;
}

.option-index {
  width: 40rpx;
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
  text-align: center;
  margin-right: 10rpx;
}

.option-main {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.option-name-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  min-height: 50rpx;
}

.weight-control {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  border-left: 2rpx solid #F0F2F5;
  padding-left: 20rpx;
}

.weight-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
}

.weight-input {
  width: 80rpx;
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: bold;
  text-align: center;
  background: #F0F2F5;
  border-radius: 8rpx;
  padding: 8rpx 4rpx;
  min-height: 48rpx;
}

.delete-option-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

.delete-option-btn text {
  font-size: 40rpx;
  color: #FF5E62;
  line-height: 1;
}

.delete-option-btn:active {
  opacity: 0.7;
}

.add-option-wrapper {
  padding: 10rpx 20rpx 40rpx;
}

.add-option-btn {
  width: fit-content;
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
  font-size: 30rpx;
  border-radius: 16rpx;
  border: 2rpx dashed rgba(74, 144, 226, 0.4);
  padding: 24rpx 80rpx;
  line-height: normal;
  white-space: nowrap;
  margin: 0 auto;
}

.add-option-btn::after {
  display: none;
}

.bottom-action {
  padding: 20rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: center;
}

.start-wheel-btn {
  width: fit-content;
  background: linear-gradient(135deg, #FF9966, #FF5E62);
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(255, 94, 98, 0.3);
  padding: 24rpx 100rpx;
  line-height: normal;
  white-space: nowrap;
  margin: 0;
}

.start-wheel-btn::after {
  display: none;
}

.start-wheel-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 10rpx rgba(255, 94, 98, 0.2);
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-input {
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
}

.modal-btn.cancel {
  background: #F0F2F5;
  color: #666;
  margin-right: 20rpx;
}

.modal-btn.confirm {
  background: #4A90E2;
  color: white;
}
