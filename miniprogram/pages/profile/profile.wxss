/**profile.wxss**/
.page-container {
  background-color: #F8F9FA;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header-section {
  background: white;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.03);
  margin-bottom: auto;
}

.avatar-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #E1E8ED;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}


.content-area {
  padding: 0 40rpx 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 32rpx;
  padding-left: 10rpx;
}

.dev-card {
  padding: 40rpx 0;
  text-align: center;
}

.dev-info-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.value {
  font-size: 28rpx;
  color: #666;
}


/* iPad 适配 */
@media (min-width: 768px) {
  .header-section {
    padding: 60px 40px;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    margin-bottom: 40px;
  }
  
  .avatar-circle {
    width: 100px; height: 100px;
    font-size: 50px;
    margin-bottom: 20px;
  }
  
  .user-name { font-size: 28px; margin-bottom: 6px; }
  .content-area {
    padding: 0 40px 60px;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .section-title { font-size: 24px; margin-bottom: 24px; }
  
  .dev-card { padding: 30px; border-radius: 20px; }
  .label { font-size: 18px; }
  .value { font-size: 20px; }
}
