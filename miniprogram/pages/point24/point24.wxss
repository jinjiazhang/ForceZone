/* point24.wxss - 清新明亮风格 */
.page-container {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 顶部功能区 */
.top-bar {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
}

.top-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.icon-text {
  font-size: 40rpx;
  color: #666;
}

.skip-btn {
  background: #fff8e6;
  flex-direction: row;
  gap: 4rpx;
  padding: 0 20rpx;
  width: auto;
}

.skip-icon {
  font-size: 32rpx;
}

.skip-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #f5a623;
}

/* 计时器 */
.timer-bar {
  padding: 10rpx 30rpx;
}

.timer-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: #fff0f0;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

.timer-icon {
  font-size: 28rpx;
}

.timer-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
}

/* 游戏主区域 */
.game-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 欢迎界面 */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.welcome-card {
  width: 360rpx;
  height: 360rpx;
  background: #4cd9a4;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 40rpx rgba(76, 217, 164, 0.2);
  position: relative;
  margin-bottom: 80rpx;
}

.welcome-title {
  font-size: 180rpx;
  font-weight: 900;
  color: white;
  line-height: 1;
  letter-spacing: -14rpx;
  margin-right: 14rpx;
  font-family: 'Segoe UI', 'Roboto', sans-serif;
}

.welcome-badge {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  background: #f1c40f;
  border-radius: 50%;
  top: 32%;
  right: 22%;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* welcome-info removed */

.start-btn {
  width: auto;
  min-width: 300rpx;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  background: #3498db;
  color: white;
  box-shadow: 0 10rpx 20rpx rgba(52, 152, 219, 0.3);
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 10rpx rgba(52, 152, 219, 0.3);
}

/* 倒计时文字 */
.countdown-text {
  font-size: 80rpx;
  font-weight: 700;
  color: #00bcd4;
  font-style: italic;
}

.countdown-text .go {
  color: #4caf50;
  font-size: 100rpx;
}

/* 数字卡片网格 */
.cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
  max-width: 500rpx;
  margin-bottom: 60rpx;
}

.number-card {
  aspect-ratio: 1;
  background: #e3f6f8;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 150, 170, 0.1);
}

.number-card:active {
  transform: scale(0.96);
}

.number-card.selected {
  background: #b2ebf2;
  box-shadow: 0 8rpx 24rpx rgba(0, 188, 212, 0.3);
  transform: scale(1.02);
}

.number-value {
  font-size: 80rpx;
  font-weight: 700;
  color: #2c3e50;
}

/* 运算符区 */
.operator-section {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 20rpx;
}

.op-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff5f0;
  border-radius: 20rpx;
  font-size: 52rpx;
  font-weight: 600;
  color: #ff6b35;
  transition: all 0.2s;
}

.op-btn:active {
  transform: scale(0.95);
}

.op-btn.selected {
  background: #ff6b35;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
}

/* 底部按钮区 */
.footer-section {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  padding: 30rpx;
  padding-bottom: calc(50rpx + env(safe-area-inset-bottom));
}

.hint-btn, .undo-btn {
  padding: 20rpx 40rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
}

.hint-btn:active, .undo-btn:active {
  background: #e0e0e0;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-content {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx;
  margin: 40rpx;
  text-align: center;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.solution-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #00bcd4;
  font-family: 'Courier New', monospace;
  padding: 30rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  word-break: break-all;
}

.modal-btn {
  display: inline-block;
  padding: 24rpx 50rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin: 10rpx;
}

.modal-btn.primary {
  background: #3498db;
  color: white;
  font-weight: 600;
}

.result-modal .result-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.result-modal .result-message {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.result-modal.success .result-message {
  color: #00bcd4;
}

.result-modal.fail .result-message {
  color: #ff6b6b;
}

.modal-actions {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

/* iPad 适配 */
@media (min-width: 768px) {
  .header {
    padding: 40px 30px 15px;
  }
  
  .cards-grid {
    max-width: 360px;
    gap: 16px;
  }
  
  .number-card {
    border-radius: 16px;
  }
  
  .number-value {
    font-size: 48px;
  }
  
  .op-btn {
    width: 60px;
    height: 60px;
    font-size: 32px;
    border-radius: 14px;
  }
  
  .welcome-card {
    width: 300px;
    height: 240px;
    border-radius: 24px;
  }
  
  .welcome-title {
    font-size: 48px;
  }
  
  .start-btn {
    padding: 18px 80px;
    font-size: 20px;
  }
}
